<?xml version="1.0" encoding="utf-8"?>
<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <xar:data-input property="$properties['id']" hidden="hidden" />
    <div class="xar-row">
        <div class="xar-col">
            <xar:var name="label">Name</xar:var>
            <xar:data-label property="$properties['name']" for="id" label="$label" />
        </div>
        <div class="xar-col">
            <xar:data-input property="$properties['name']" />
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col">
            <xar:var name="label">Title</xar:var>
            <xar:data-label property="$properties['title']" for="id" label="$label" />
        </div>
        <div class="xar-col">
            <xar:data-input property="$properties['title']" />
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col">
            <xar:var name="label">Description</xar:var>
            <xar:data-label property="$properties['description']" for="id" label="$label" />
        </div>
        <div class="xar-col">
            <xar:data-input property="$properties['description']" />
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col">
            <xar:var name="label">Summary</xar:var>
            <xar:data-label property="$properties['summary']" for="id" label="$label" />
        </div>
        <div class="xar-col">
            <xar:data-input property="$properties['summary']" />
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col">
            <xar:var name="label">Detail</xar:var>
            <xar:data-label property="$properties['detail']" for="id" label="$label" />
        </div>
        <div class="xar-col">
            <xar:data-input property="$properties['detail']" />
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col">
            <xar:var name="label">Summary Image</xar:var>
            <xar:data-label property="$properties['summary_image']" for="id" label="$label" />
        </div>
        <div class="xar-col">
            <xar:data-input property="$properties['summary_image']" />
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col">
            <xar:var name="label">Detail Image</xar:var>
            <xar:data-label property="$properties['detail_image']" for="id" label="$label" />
        </div>
        <div class="xar-col">
            <xar:data-input property="$properties['detail_image']" />
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col">
            <xar:var name="label">Download</xar:var>
            <xar:data-label property="$properties['download']" for="id" label="$label" />
        </div>
        <div class="xar-col">
            <xar:data-input property="$properties['download']" />
        </div>
    </div>
    <div class="xar-row">
        <div class="xar-col">
            <xar:var name="label">Notes</xar:var>
            <xar:data-label property="$properties['notes']" for="id" label="$label" />
        </div>
        <div class="xar-col">
            <xar:data-input property="$properties['notes']" />
        </div>
    </div>
    <xar:if condition="!$properties['parent']->value">
        <div class="xar-row">
            <div class="xar-col">
                <xar:data-input property="$properties['position']"/>
            </div>
        </div>
    </xar:if>
</xar:template>